{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "westus"
    },
    "securityGroupName": {
      "type": "string",
      "defaultValue": "securityGroup1"
    },
    "loadBalancerName": {
      "type": "string",
      "defaultValue": "BIGIPLoadBlancer",
      "metadata": {
        "description": ""
      }
    },
    "dnsNameForPublicIP": {
      "type": "string",
      "metadata": {
        "description": "Unique DNS Name for the Public IP used to access the Virtual Machine."
      }
    },
    "dnsNameForPublicIP2": {
      "type": "string",
      "metadata": {
        "description": "Unique DNS Name for the Public IP used to access the Application."
      }
    }
  },
  "variables": {
    "lbID": "[resourceId('Microsoft.Network/loadBalancers',parameters('loadBalancerName'))]",
    "nsgID": "[resourceID('Microsoft.Network/networkSecurityGroups', parameters('securityGroupName'))]",
    "frontEndIPConfigID": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontEnd')]",
    "frontEndIPConfigID2": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontEnd2')]",
    "loadBalancerBackEnd": "[concat(variables('lbID'),'/backendAddressPools/loadBalancerBackEnd')]",
    "App1_Probe_80": "[concat(variables('lbID'),'/probes/App1_probe_80')]",
    "App1_Probe_443": "[concat(variables('lbID'),'/probes/App1_probe_443')]",
    "publicIPID": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('dnsNameForPublicIP'))]",
    "publicIPID2": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('dnsNameForPublicIP2'))]"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('dnsNameForPublicIP2')]",
      "location": "[parameters('location')]",
      "tags": {
        "displayName": "PublicIPAddressApp"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('dnsNameForPublicIP2')]"
        }
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('securityGroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "ui_rule",
            "properties": {
              "description": "",
              "priority": 101,
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "443",
              "protocol": "TCP",
              "direction": "Inbound",
              "access": "Allow"
            }
          },
          {
            "name": "ssh_rule",
            "properties": {
              "description": "",
              "priority": 102,
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "22",
              "protocol": "TCP",
              "direction": "Inbound",
              "access": "Allow"
            }
          },
          {
            "name": "app1_80_rule",
            "properties": {
              "description": "",
              "priority": 201,
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "8080",
              "protocol": "TCP",
              "direction": "Inbound",
              "access": "Allow"
            }
          },
          {
            "name": "app1_443_rule",
            "properties": {
              "description": "",
              "priority": 202,
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "8440",
              "protocol": "TCP",
              "direction": "Inbound",
              "access": "Allow"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "name": "[parameters('loadBalancerName')]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "loadBalancerFrontEnd",
            "properties": {
              "publicIPAddress": {
                "id": "[variables('publicIPID')]"
              }
            }
          },
          {
            "name": "loadBalancerFrontEnd2",
            "properties": {
              "publicIPAddress": {
                "id": "[variables('publicIPID2')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "loadBalancerBackEnd"
          }
        ],
        "inboundNatRules": [
          {
            "name": "guimgt0",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 8441,
              "backendPort": 443,
              "enableFloatingIP": false
            }
          },
          {
            "name": "guimgt1",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 8442,
              "backendPort": 443,
              "enableFloatingIP": false
            }
          },
          {
            "name": "guimgt2",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 8443,
              "backendPort": 443,
              "enableFloatingIP": false
            }
          },
          {
            "name": "guimgt3",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 8444,
              "backendPort": 443,
              "enableFloatingIP": false
            }
          },
          {
            "name": "sshmgt0",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 8221,
              "backendPort": 22,
              "enableFloatingIP": false
            }
          },
          {
            "name": "sshmgt1",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 8222,
              "backendPort": 22,
              "enableFloatingIP": false
            }
          },
          {
            "name": "sshmgt2",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 8223,
              "backendPort": 22,
              "enableFloatingIP": false
            }
          },
          {
            "name": "sshmgt3",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 8224,
              "backendPort": 22,
              "enableFloatingIP": false
            }
          }
        ],
        "loadBalancingRules": [
          {
            "name": "App1_lbrule_80",
            "properties": {
              "backendAddressPool": {
                "id": "[variables('loadBalancerBackEnd')]"
              },
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID2')]"
              },
              "backendPort": 8080,
              "frontendPort": 80,
              "protocol": "TCP",
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 15,
              "probe": {
                "id": "[variables('App1_Probe_80')]"
              }
            }
          },
          {
            "name": "App1_lbrule_443",
            "properties": {
              "backendAddressPool": {
                "id": "[variables('loadBalancerBackEnd')]"
              },
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID2')]"
              },
              "backendPort": 8440,
              "frontendPort": 443,
              "protocol": "TCP",
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 5,
              "probe": {
                "id": "[variables('App1_Probe_443')]"
              }
            }
          }
        ],
        "probes": [
          {
            "name": "App1_probe_80",
            "properties": {
              "port": 8080,
              "protocol": "TCP",
              "intervalInSeconds": 15,
              "numberOfProbes": 5
            }
          },
          {
            "name": "App1_probe_443",
            "properties": {
              "port": 8440,
              "protocol": "TCP",
              "intervalInSeconds": 15,
              "numberOfProbes": 5
            }
          }
        ]
      },
      "type": "Microsoft.Network/loadBalancers"
    }
  ]
}
